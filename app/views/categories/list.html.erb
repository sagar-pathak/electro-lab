<h1>Categories</h1>

<table class="table table-striped table-hover">

  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Total Posts</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each_with_index do |category,index| %>
      <tr>
        <td> <%= index+1 %> </td>
        <td><%= category.name %></td>

        <td>
           <%= @posts.where(category_id: category.id).count %>
        </td>

        <td class="text-nowrap">
          <a><%= link_to 'Edit', edit_category_path(category), class: 'btn' %></a>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>