<style>
  .title{
    font-style: normal;
    font-weight: 500;
    font-size: 24px;
    line-height: 29px;
    color: #000000;
    padding-bottom: 20px;
  }

  .post-wrap{
    padding-bottom: 25px;
  }

  .post-content-wrap{
    display: flex;
    flex-direction: row;
  }

  .post-content{
    display: flex;
    flex-direction: column;
    padding-left: 15px;
  }

  .post-title{
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 22px;
    color: #1C1C1C;
    cursor: pointer;
  }

  .post-author{
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 15px;
    color: rgba(0, 0, 0, 0.5);
    padding-bottom: 8px;
  }

  .post-desc{
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 17px;
    color: #1C1C1C;
    
    width:650px;
    /**Major Properties**/
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    padding-bottom: 8px;
  }

  .post-actions{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .actions{
    display: flex;
  }

  .action{
    padding-right: 20px;
  }

  .action-text{
    text-decoration: underline;
  }

  .unset-underline{
    text-decoration: none;
  }
</style>

<div class="title">My Posts</div>

<% @posts.each do |post| %>

<div class="post-wrap">
  <div class="post-content-wrap">
    <div class="thumbnail">
      <%= image_tag(post.thumbnailImg, :size=>'106x106') %>
    </div>
    <div class="post-content">
      
      <%= link_to show_post_url(post_id:post.id) do %>
        <div class="post-title"><%= post.title %>
      <% end %>
      </div>
      <div class="post-author">Posted on: <%= post.created_at %></div>
      <div class="post-desc">
        <%= post.description %>
      </div>
      <div class="post-actions">
        <div class="left-actions">
          <div class="actions">
            <div class="action">
              <span class="action-text">Category:  (<%= post.category.name %>)</span>
            </div>
          </div>
        </div>
        <div class="right-actions">
          <div class="actions">
            <div class="action">
              <%= link_to edit_post_url(post_id:post.id) do %>
                <span class="action-text">Edit</span>
              <% end %>
            </div>

            <div class="action">
              <%= link_to delete_post_url(post_id:post.id), method: :delete, :data => {:confirm => "Are you sure you want to delete this post?" } do %>
                <span class="action-text">Delete</span>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
   
<% end %>
